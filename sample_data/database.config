# Database Configuration

# Primary Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp_production
DB_USER=app_user

# Connection Pool
POOL_SIZE=10
POOL_TIMEOUT=30
MAX_OVERFLOW=20

# Read Replica (optional)
REPLICA_HOST=replica.example.com
REPLICA_PORT=5432
REPLICA_ENABLED=false

# Backup Settings
BACKUP_ENABLED=true
BACKUP_PATH=/backups/db
BACKUP_RETENTION_DAYS=30
